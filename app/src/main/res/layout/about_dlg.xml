 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/LinearLayout1"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
	 >

     <TextView
         android:id="@+id/textTitle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="10dp"
         android:text="@string/app_name"
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
         android:id="@+id/textSubtitle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="10dp"
         android:text="@string/app_name_by"
         android:textAppearance="?android:attr/textAppearanceMedium" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal"
         android:layout_marginTop="30dp" 
         android:orientation="horizontal" >

         <TextView
             android:id="@+id/textVersionLbl"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingRight="@dimen/dimension_4"
             android:text="@string/appversion"
             android:textAlignment="textEnd"
             android:textAppearance="?android:attr/textAppearanceMedium" />

         <TextView
             android:id="@+id/textVersion"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="@dimen/dimension_4"
             android:textAlignment="textStart"
             android:textAppearance="?android:attr/textAppearanceMedium" />
     </LinearLayout>

     
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal"
         android:layout_marginTop="10dp" 
         android:orientation="horizontal" >

         <TextView
             android:id="@+id/textInstalledLbl"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingRight="@dimen/dimension_4"
             android:text="@string/installedondate"
             android:textAlignment="textEnd"
             android:textAppearance="?android:attr/textAppearanceMedium" />

         <TextView
             android:id="@+id/textInstallDate"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="@dimen/dimension_4"
             android:textAlignment="textStart"
             android:textAppearance="?android:attr/textAppearanceMedium" />
     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="30dp"
         android:gravity="center_horizontal"
         android:orientation="horizontal" >

         <TextView
             android:id="@+id/textUpdatedLbl"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingRight="@dimen/dimension_4"
             android:text="@string/updatedondate"
             android:textAlignment="textEnd"
             android:textAppearance="?android:attr/textAppearanceMedium" />

         <TextView
             android:id="@+id/textUpdatedDate"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="@dimen/dimension_4"
             android:textAlignment="textStart"
             android:textAppearance="?android:attr/textAppearanceMedium" />
             
     </LinearLayout>
     
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal"
         android:layout_marginTop="10dp" 
         android:layout_marginBottom="12dp" 
         android:orientation="horizontal" >
     
	     <Button
		      android:id="@+id/btnUpdate"
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:text="@string/button_updatecheck" />
     </LinearLayout>
     
     
 </LinearLayout>