<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/LinearLayout1"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
	 >

     <TextView
         android:id="@+id/textTitle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="10dp"
         android:text="@string/filesavedlg_title"
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
         android:id="@+id/textSubtitle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="10dp"
         android:textAppearance="?android:attr/textAppearanceMedium" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal"
         android:layout_marginTop="30dp" 
         android:orientation="horizontal" >

         <TextView
             android:id="@+id/textFilepathLbl"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingRight="@dimen/dimension_4"
             android:text="@string/filesavedlg_location"
             android:textAlignment="textEnd"
             android:textAppearance="?android:attr/textAppearanceMedium" />

         <TextView
             android:id="@+id/textFilepath"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="@dimen/dimension_4"
             android:textAlignment="textStart"
             android:textAppearance="?android:attr/textAppearanceMedium" />
         
         <Button
		      android:id="@+id/btnBrowse"
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:text="@string/button_browse" />
     </LinearLayout>

     
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal"
         android:layout_marginTop="10dp" 
         android:orientation="horizontal" >

         <TextView
             android:id="@+id/textFilenameLbl"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingRight="@dimen/dimension_4"
             android:text="@string/filesavedlg_filename"
             android:textAlignment="textEnd"
             android:textAppearance="?android:attr/textAppearanceMedium" />

         <EditText
             android:id="@+id/textFilename"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="@dimen/dimension_4"
             android:textAlignment="textStart"
             android:ems="14" 
             android:textAppearance="?android:attr/textAppearanceMedium" />
     </LinearLayout>

     
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal"
         android:layout_marginTop="10dp" 
         android:layout_marginBottom="12dp" 
         android:orientation="horizontal" >
     
	     <Button
		      android:id="@+id/btnCancel"
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:text="@android:string/cancel" />
	     <Button
		      android:id="@+id/btnOK"
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:text="@android:string/ok" />
	</LinearLayout>
     
 
</LinearLayout>